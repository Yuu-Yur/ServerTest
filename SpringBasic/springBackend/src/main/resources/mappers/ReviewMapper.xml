<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.busanit501.springbackend.mapper.ReviewMapper">
    <insert id="insert">
        insert into review (username,content,title)
        values (#{userName},#{content},#{title})
    </insert>

    <update id="update">
        update review
        set username = #{userName} , title = #{title} , content = #{content}
        where rid = #{rid}
    </update>

    <delete id="delete">
        delete
        from review
        where rid = #{rid}
    </delete>

    <select id="select" resultType="com.busanit501.springbackend.domain.ReviewVO">
        select *
        from review
        <include refid="search"/>
        order by rid desc
        limit #{page.skip}, #{page.size}
    </select>

    <select id="count" resultType="int">
        select count(rid)
        from review
        <include refid="search"/>
    </select>

    <sql id="search">
        <where>
            <if test="page.types != null and page.types.length >0">
                <foreach item="type" collection="page.types"
                         open="(" close=")" separator="OR">
                    <if test="type == 'u'.toString()">
                        username like concat('%',#{page.keyword},'%')
                    </if>
                    <if test="type == 'c'.toString()">
                        content like concat('%',#{page.keyword},'%')
                    </if>
                </foreach>
            </if>
            <trim prefix="and">
                title = #{title}
            </trim>
        </where>
    </sql>
</mapper>